azul = #22BCE0
gris_oscuro = #444
naranja = #DD4F24

body
	background #E8E8E8
	color gris_oscuro
	font-family	Arial
	font-size 16px

header
	background gris_oscuro
	color white
	overflow hidden
	padding	0.5em
	position relative

	.logo
		border-right 1px solid azul
		width 60px

		img
			width 52px

	.titular
		margin 0 80px 0 70px

		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none

		.publicar
			background naranja
			color white
			font-size 15px
			font-style italic
			float right
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		float right
		margin 10px 10px 0 0
		position absolute
		right 0
		top 0

		.avatar
			img
				border-radius 50%
				position absolute
				right 20px
				width 50px
				z-index 2
		
		.flechita
			background naranja
			color white
			display block
			padding-top 1px
			padding-left 25px
			padding-right 5px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 13px
			z-index 1
			

nav
	background azul

.left
	float left

.right
	float right